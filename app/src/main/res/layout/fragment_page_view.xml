<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/toolbar_custom"
        android:id="@+id/ll_toolbar"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <com.vulcansolutions.alqurankareem16linehafizi.adapters.CustomViewPager
        android:id="@+id/cviewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <com.vulcansolutions.alqurankareem16linehafizi.usage.MovableFloatingActionButton
        android:id="@+id/moveableFloatingBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:backgroundTint="@android:color/transparent"
        android:onClick="floatClick"/>

    <ImageView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="@drawable/border_1" />


</RelativeLayout>