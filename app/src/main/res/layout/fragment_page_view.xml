<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/ll_toolbar"
        layout="@layout/toolbar_custom"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_bookmark"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/ic_baseline_bookmark_add_24"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:padding="@dimen/_4sdp"
        />


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_toolbar">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5" />

        <com.vulcansolutions.alqurankareem16linehafizi.adapters.CustomViewPager
            android:id="@+id/cviewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </RelativeLayout>

    <com.vulcansolutions.alqurankareem16linehafizi.usage.MovableFloatingActionButton
        android:id="@+id/moveableFloatingBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_4sdp"
        android:backgroundTint="@android:color/transparent"
        tools:ignore="RelativeOverlap"
        android:visibility="gone"/>

</RelativeLayout>