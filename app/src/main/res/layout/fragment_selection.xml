<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/toolbar_custom"
        android:id="@+id/ll_toolbar"/>

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/viewpagertab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        app:stl_indicatorAlwaysInCenter="false"
        app:stl_indicatorWithoutPadding="false"
        app:stl_indicatorInFront="false"
        app:stl_indicatorInterpolation="smart"
        app:stl_indicatorGravity="bottom"
        app:stl_indicatorColor="@color/colorPrimary"
        app:stl_indicatorThickness="@dimen/_2sdp"
        app:stl_indicatorWidth="auto"
        app:stl_indicatorCornerRadius="@dimen/_2sdp"
        app:stl_overlineColor="#4D000000"
        app:stl_overlineThickness="0dp"
        app:stl_underlineColor="#4D000000"
        app:stl_underlineThickness="0.5dp"
        app:stl_dividerColor="#4D000000"
        app:stl_dividerThickness="0.5dp"
        app:stl_defaultTabTextAllCaps="true"
        app:stl_defaultTabTextColor="@color/colorText2"
        app:stl_defaultTabTextSize="@dimen/_10sdp"
        app:stl_defaultTabTextHorizontalPadding="@dimen/_12sdp"
        app:stl_defaultTabTextMinWidth="0dp"
        app:stl_distributeEvenly="true"
        app:stl_clickable="true"
        app:stl_titleOffset="@dimen/_20sdp"
        app:stl_drawDecorationAfterTab="false"
        android:layout_below="@+id/ll_toolbar"
        />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/viewpagertab"
        />

</RelativeLayout>