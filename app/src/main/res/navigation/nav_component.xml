<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_component"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.vulcansolutions.alqurankareem16linehafizi.fragment.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_selectionFragment"
            app:destination="@id/selectionFragment"
            app:enterAnim="@anim/enter"
            app:exitAnim="@anim/exit"
            app:popEnterAnim="@anim/pop_enter"
            app:popExitAnim="@anim/pop_exit"/>
        <action
            android:id="@+id/action_homeFragment_to_bookmarkSelectionFragment"
            app:destination="@id/bookmarkSelectionFragment"
            app:enterAnim="@anim/enter"
            app:exitAnim="@anim/exit"
            app:popEnterAnim="@anim/pop_enter"
            app:popExitAnim="@anim/pop_exit"/>
        <action
            android:id="@+id/action_homeFragment_to_moreFragment"
            app:destination="@id/moreFragment"
            app:enterAnim="@anim/enter"
            app:exitAnim="@anim/exit"
            app:popEnterAnim="@anim/pop_enter"
            app:popExitAnim="@anim/pop_exit"/>
        <action
            android:id="@+id/action_homeFragment_to_pageViewFragment"
            app:destination="@id/pageViewFragment"
            app:enterAnim="@anim/enter"
            app:exitAnim="@anim/exit"
            app:popEnterAnim="@anim/pop_enter"
            app:popExitAnim="@anim/pop_exit"/>
    </fragment>

    <fragment
        android:id="@+id/selectionFragment"
        android:name="com.vulcansolutions.alqurankareem16linehafizi.fragment.SelectionFragment"
        android:label="SelectionFragment"
        tools:layout="@layout/fragment_selection">
        <action
            android:id="@+id/action_selectionFragment_to_pageViewFragment"
            app:destination="@id/pageViewFragment"
            app:enterAnim="@anim/enter"
            app:exitAnim="@anim/exit"
            app:popEnterAnim="@anim/pop_enter"
            app:popExitAnim="@anim/pop_exit"/>
    </fragment>
    <fragment
        android:id="@+id/bookmarkSelectionFragment"
        android:name="com.vulcansolutions.alqurankareem16linehafizi.fragment.BookmarkSelectionFragment"
        android:label="BookmarkSelectionFragment"
        tools:layout="@layout/fragment_bookmark">
        <action
            android:id="@+id/action_bookmarkSelectionFragment_to_pageViewFragment"
            app:destination="@id/pageViewFragment"
            app:enterAnim="@anim/enter"
            app:exitAnim="@anim/exit"
            app:popEnterAnim="@anim/pop_enter"
            app:popExitAnim="@anim/pop_exit"/>
    </fragment>
    <fragment
        android:id="@+id/borderSelectionFragment"
        android:name="com.vulcansolutions.alqurankareem16linehafizi.fragment.BorderSelectionFragment"
        android:label="BorderSelectionFragment"
        tools:layout="@layout/fragment_border_selection"/>
    <fragment
        android:id="@+id/moreFragment"
        android:name="com.vulcansolutions.alqurankareem16linehafizi.fragment.MoreFragment"
        android:label="MoreFragment"
        tools:layout="@layout/fragment_more">
        <action
            android:id="@+id/action_moreFragment_to_borderSelectionFragment"
            app:destination="@id/borderSelectionFragment"
            app:enterAnim="@anim/enter"
            app:exitAnim="@anim/exit"
            app:popEnterAnim="@anim/pop_enter"
            app:popExitAnim="@anim/pop_exit"/>
    </fragment>
    <fragment
        android:id="@+id/pageViewFragment"
        android:name="com.vulcansolutions.alqurankareem16linehafizi.fragment.PageViewFragment"
        android:label="PageViewFragment"
        tools:layout="@layout/fragment_page_view"/>

</navigation>